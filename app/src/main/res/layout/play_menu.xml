<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/playback"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_play"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:id="@+id/levels"
        android:layout_below="@id/logo_play"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/level2_background"
            android:layout_alignBaseline="@id/level2_background"
            android:id="@+id/level1_background"
            android:layout_centerInParent="true">

            <ImageButton
                android:id="@+id/level1"
                android:text="@string/easy_btn"
                android:background="@android:color/transparent"
                android:src="@drawable/easy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:clickable="false"
                android:text="@string/easy_btn"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/level2_background">
            <ImageButton
                android:text="@string/medium_btn"
                android:background="@android:color/transparent"
                android:id="@+id/level2"
                android:backgroundTint="@color/purple_200"
                android:layout_width="wrap_content"
                android:src="@drawable/medium_btn"
                android:layout_height="wrap_content"/>
            <TextView
                android:clickable="false"
                android:text="@string/medium_btn"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@id/level2_background"
            android:layout_alignBaseline="@id/level2_background"
            android:id="@+id/level3_background"
            android:layout_centerInParent="true">
            <ImageButton
                android:text="@string/hard_btn"
                android:background="@android:color/transparent"
                android:id="@+id/level3"
                android:src="@drawable/hard_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:clickable="false"
                android:text="@string/hard_btn"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
                android:textSize="15sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/levels"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:id="@+id/highscorebackground">
        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/score_btn"
            android:src="@drawable/highscore_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/score_table_btn"/>
        <TextView
            android:clickable="false"
            android:text="@string/score_table_btn"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highscorebackground"
        android:layout_centerInParent="true">
        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/guidance_button"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:src="@drawable/highscore_btn"
            android:text="@string/guidance_btn" />
        <TextView
            android:clickable="false"
            android:text="@string/guidance_btn"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_containerplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp" />

</RelativeLayout>