<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/scoretableback"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:id="@+id/titlescore"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name_table"
        android:textSize="30dp"
        android:textColor="@color/teal_700"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Name"/>
    <TextView
        android:id="@+id/level_table"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_margin="20dp"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:text="Level"/>
    <TextView
        android:id="@+id/score_table"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:text="Score"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlescore"
        android:id="@+id/score_list"/>
    <FrameLayout
        android:id="@+id/fragment_containerscoretable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp" />
</RelativeLayout>