<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/playback"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/pick"
        android:layout_below="@+id/logo_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick level"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/levels"
        android:layout_below="@id/pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:text="Easy"
            android:background="@android:color/transparent"
            android:id="@+id/level1"
            android:layout_toStartOf="@id/level2"
            android:layout_alignBaseline="@id/level2"
            android:src="@drawable/easy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <ImageButton
        android:text="Medium"
        android:background="@android:color/transparent"
        android:id="@+id/level2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/purple_200"
        android:layout_width="wrap_content"
        android:src="@drawable/medium_btn"
        android:layout_height="wrap_content" />

    <ImageButton
        android:text="Hard"
        android:background="@android:color/transparent"
        android:id="@+id/level3"
        android:layout_toEndOf="@id/level2"
        android:layout_alignBaseline="@id/level2"
        android:src="@drawable/hard_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/score_btn"
        android:layout_below="@id/levels"
        android:src="@drawable/highscore_btn"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="High score table"
        android:layout_gravity="center"/>
    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/guidance_button"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:src="@drawable/highscore_btn"
        android:layout_below="@id/score_btn"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:text="guidance" />

    <FrameLayout
        android:id="@+id/fragment_containerplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp" />

</RelativeLayout>